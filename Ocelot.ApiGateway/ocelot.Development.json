{
  "Routes": [
    //Catalog API
    {
      "DownstreamPathTemplate": "/api/v1/CatalogApi",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "host.docker.internal",
          "Port": "5000"
        }
      ],
      "UpstreamPathTemplate": "/CatalogApi",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT" ],
      "FileCacheOptions": { "TtlSeconds": 30 }
    },
    {
      "DownstreamPathTemplate": "/api/v1/CatalogApi/GetProductById/{id}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "host.docker.internal",
          "Port": "5000"
        }
      ],
      "UpstreamPathTemplate": "/CatalogApi/GetProductById/{id}",
      "UpstreamHttpMethod": [ "GET", "DELETE" ]
    },
    {
      "DownstreamPathTemplate": "/api/v1/CatalogApi/GetAllProducts",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "host.docker.internal",
          "Port": "5000"
        }
      ],
      "UpstreamPathTemplate": "/CatalogApi/GetAllProducts",
      "UpstreamHttpMethod": [ "GET", "DELETE" ]
    },
    {
      "DownstreamPathTemplate": "/api/v1/CatalogApi/GetAllBrands",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "host.docker.internal",
          "Port": "5000"
        }
      ],
      "UpstreamPathTemplate": "/CatalogApi/GetAllBrands",
      "UpstreamHttpMethod": [ "GET", "DELETE" ]
    },
    {
      "DownstreamPathTemplate": "/api/v1/CatalogApi/GetAllTypes",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "host.docker.internal",
          "Port": "5000"
        }
      ],
      "UpstreamPathTemplate": "/CatalogApi/GetAllTypes",
      "UpstreamHttpMethod": [ "GET", "DELETE" ]
    },
    {
      "DownstreamPathTemplate": "/api/v1/CatalogApi/GetProductByName/{name}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "host.docker.internal",
          "Port": "5000"
        }
      ],
      "UpstreamPathTemplate": "/CatalogApi/GetProductByName/{name}",
      "UpstreamHttpMethod": [ "GET" ]
    },

    ////
    {
      "DownstreamPathTemplate": "/api/v1/CatalogApi/CreateProduct",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "host.docker.internal",
          "Port": "5000"
        }
      ],
      "UpstreamPathTemplate": "/CatalogApi/CreateProduct",
      "UpstreamHttpMethod": [ "POST" ]
    },
    {
      "DownstreamPathTemplate": "/api/v1/CatalogApi/UpdateProduct",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "host.docker.internal",
          "Port": "5000"
        }
      ],
      "UpstreamPathTemplate": "/CatalogApi/UpdateProduct",
      "UpstreamHttpMethod": [ "PUT" ]
    },
    {
      "DownstreamPathTemplate": "/api/v1/CatalogApi/DeleteProduct/{id}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "host.docker.internal",
          "Port": "5000"
        }
      ],
      "UpstreamPathTemplate": "/CatalogApi/DeleteProduct/{id}",
      "UpstreamHttpMethod": [ "DELETE" ]
    },
    //Basket API
    {
      "DownstreamPathTemplate": "/api/v1/BasketApi/GetBasketByUsername/{userName}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "host.docker.internal",
          "Port": "5001"
        }
      ],
      "UpstreamPathTemplate": "/BasketApi/GetBasketByUsername/{userName}",
      "UpstreamHttpMethod": [ "GET" ]
    },
    {
      "DownstreamPathTemplate": "/api/v1/BasketApi/DeleteBasket/{userName}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "host.docker.internal",
          "Port": "5001"
        }
      ],
      "UpstreamPathTemplate": "/BasketApi/DeleteBasket/{userName}",
      "UpstreamHttpMethod": [ "DELETE" ]
    },
    {
      "DownstreamPathTemplate": "/api/v1/BasketApi/UpdateBasket",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "host.docker.internal",
          "Port": "5001"
        }
      ],
      "UpstreamPathTemplate": "/BasketApi/UpdateBasket",
      "UpstreamHttpMethod": [ "POST" ]
      //      "AuthenticationOptions": {
      //        "AuthenticationProviderKey": "EShoppingGatewayAuthScheme"
      //      }
    },
    {
      "DownstreamPathTemplate": "/api/v1/BasketApi/Checkout",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "host.docker.internal",
          "Port": "5001"
        }
      ],
      "UpstreamPathTemplate": "/BasketApi/Checkout",
      "UpstreamHttpMethod": [ "POST" ],
      "RateLimitOptions": {
        "ClientWhitelist": [],
        "EnableRateLimiting": true,
        "Period": "3s",
        "PeriodTimespan": 1,
        "Limit": 1
      }
    },

    //Discount API
    {
      "DownstreamPathTemplate": "/api/v1/Discount/{productName}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "host.docker.internal",
          "Port": "5002"
        }
      ],
      "UpstreamPathTemplate": "/Discount/{productName}",
      "UpstreamHttpMethod": [ "GET", "DELETE" ]
    },
    {
      "DownstreamPathTemplate": "/api/v1/Discount",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "host.docker.internal",
          "Port": "5002"
        }
      ],
      "UpstreamPathTemplate": "/Discount",
      "UpstreamHttpMethod": [ "PUT", "POST" ]
    },
    //Order API
    {
      "DownstreamPathTemplate": "/api/v1/OrderApi/GetOrderByUsername/{userName}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "host.docker.internal",
          "Port": "5003"
        }
      ],
      "UpstreamPathTemplate": "/Order/GetOrderByUsername/{userName}",
      "UpstreamHttpMethod": [ "GET" ]
    },
    {
      "DownstreamPathTemplate": "/api/v1/OrderApi/DeleteOrder?id={id}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "host.docker.internal",
          "Port": "5003"
        }
      ],
      "UpstreamPathTemplate": "/OrderApi/GetOrderByUsername/?id={id}",
      "UpstreamHttpMethod": [ "DELETE" ]
    },
    {
      "DownstreamPathTemplate": "/api/v1/OrderApi/UpdateOrder",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "host.docker.internal",
          "Port": "5003"
        }
      ],
      "UpstreamPathTemplate": "/OrderApi/UpdateOrder",
      "UpstreamHttpMethod": [ "PUT" ]
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:5004"
  }
}